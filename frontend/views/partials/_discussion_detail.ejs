<section class="card" id="discussionCard">
  <div class="card-header">
    <h1 id="title"><%= discussionTitle || 'Rasprava' %></h1>
    <div class="header-actions">
      <button id="closeBtn" class="btn" type="button" style="display:none;">Zatvori raspravu</button>
      <button id="openBtn" class="btn" type="button" style="display:none;">Otvori raspravu</button>
      <a href="/" class="btn" id="backToIndex">⟵ Natrag</a>
    </div>
  </div>
  <div class="meta muted" id="meta" style="margin-top:4px;"></div>

  <p id="body" style="margin-top:10px;">…</p>

  <hr style="margin:14px 0; border:none; border-top:1px solid #e5e7eb;" />

  <h3>Poruke</h3>
  <div class="messages" id="messages"></div>
  <div id="msgEmpty" class="muted" style="display:none;">Nema poruka.</div>

  <form id="msgForm" style="margin-top:12px;">
    <textarea id="msgBody" placeholder="Napišite poruku..." style="width:100%; min-height:60px;"></textarea>
    <div style="display:flex; justify-content:space-between; align-items:center; margin-top:8px;">
      <div id="msgStatus" class="muted"></div>
      <button type="submit" class="btn primary">Pošalji</button>
    </div>
  </form>
</section>

<section class="card" id="voteCard">
  <h3>Glasanje</h3>
  <div id="pollCreateBox" style="margin-top:8px; display:none;">
    <label for="pollInput" class="muted">Pitanje:</label>
    <input id="pollInput" type="text" style="width:100%; padding:6px; margin-top:4px;" />
    <button id="pollCreateBtn" class="btn primary" type="button" style="margin-top:6px;">Pokreni anketu</button>
  </div>

  <div id="pollQuestionBox" class="muted" style="margin-top:8px; display:none;"></div>
  <button id="pollDeleteBtn" class="btn" type="button" style="margin-top:6px; display:none;">Obriši anketu</button>

  <div id="voteInfo" class="muted" style="margin-top:10px;">Učitavam…</div>
  <div style="margin:8px 0;">
    <span id="yesCount" class="badge">DA: 0</span>
    <span id="noCount" class="badge">NE: 0</span>
    <span id="totalVotes" class="badge">Glasovi: 0</span>
  </div>
  <div id="threshold" class="muted" style="margin-bottom:8px;"></div>

  <div style="display:flex; gap:8px;">
    <button id="voteYes" class="btn" type="button">Glasaj DA</button>
    <button id="voteNo" class="btn" type="button">Glasaj NE</button>
  </div>
</section>
