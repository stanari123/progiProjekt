<section class="card">
    <div class="card-header">
        <h2>Rasprave</h2>
        <button id="newDiscBtn" class="btn primary" style="display: none">
            âž• Nova rasprava
        </button>
    </div>

    <form
        id="newDiscForm"
        style="
            display: none;
            margin: 12px 0;
            border: 1px solid #e5e7eb;
            padding: 12px;
            border-radius: 8px;
        "
    >
        <label
            >Naslov:<br />
            <input
                id="newDiscTitle"
                type="text"
                style="width: 100%; padding: 6px"
                required
            /> </label
        ><br /><br />
        <label
            >Opis:<br />
            <textarea
                id="newDiscBody"
                style="width: 100%; min-height: 60px"
            ></textarea></label
        ><br /><br />
        <label><input id="newDiscPrivate" type="checkbox" /> Privatna rasprava</label
        ><br /><br />

        <!-- Participant selection (shown only when private is checked) -->
        <div
            id="participantsSection"
            style="
                display: none;
                margin: 12px 0;
                padding: 12px;
                background: #f9fafb;
                border-radius: 6px;
            "
        >
            <label style="font-weight: 600">Odaberite sudionike:</label><br />
            <div
                id="participantsList"
                style="
                    margin-top: 8px;
                    max-height: 250px;
                    overflow-y: auto;
                    border: 1px solid #d1d5db;
                    border-radius: 4px;
                    padding: 8px;
                "
            >
                <!-- participants will be rendered here -->
            </div>
            <div
                id="selectedParticipantsInfo"
                class="muted"
                style="margin-top: 6px; font-size: 0.9em"
            ></div>
        </div>

        <div class="flex" style="gap: 8px">
            <button type="submit" class="btn primary">Spremi</button>
            <button type="button" id="cancelDiscBtn" class="btn">Odustani</button>
        </div>
        <div id="newDiscMsg" class="muted" style="margin-top: 6px"></div>
    </form>

    <div id="discList"></div>
    <div id="discFeedback" class="muted"></div>
</section>
